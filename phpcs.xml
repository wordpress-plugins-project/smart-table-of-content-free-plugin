<?xml version="1.0"?>
<ruleset name="Anik Smart Table of Contents">
    <description>PHPCS ruleset for Anik Smart Table of Contents plugin</description>

    <!-- Set text domain to match WordPress.org slug -->
    <config name="text_domain" value="anik-smart-table-of-contents"/>

    <!-- Set minimum WordPress version -->
    <config name="minimum_supported_wp_version" value="5.0"/>

    <!-- Scan PHP files only -->
    <arg name="extensions" value="php"/>

    <!-- Show progress -->
    <arg value="ps"/>

    <!-- Check all files in this directory -->
    <file>.</file>

    <!-- Exclude vendor and node_modules -->
    <exclude-pattern>/vendor/*</exclude-pattern>
    <exclude-pattern>/node_modules/*</exclude-pattern>
    <exclude-pattern>/.git/*</exclude-pattern>
    <exclude-pattern>/.venv/*</exclude-pattern>

    <!-- Use WordPress Coding Standards -->
    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        <!-- Exclude strict inline comment punctuation -->
        <exclude name="Squiz.Commenting.InlineComment.InvalidEndChar"/>
        <!-- Exclude file comment requirements for simple index.php files -->
        <exclude name="Squiz.Commenting.FileComment.Missing"/>
        <exclude name="Squiz.Commenting.FileComment.MissingPackageTag"/>
        <exclude name="Squiz.Commenting.FileComment.WrongStyle"/>
        <!-- Exclude strict class comment spacing -->
        <exclude name="Squiz.Commenting.ClassComment.SpacingAfter"/>
        <!-- Exclude strict function comment requirements -->
        <exclude name="Squiz.Commenting.FunctionComment.MissingParamTag"/>
        <exclude name="Squiz.Commenting.FunctionComment.Missing"/>
        <!-- Allow $default as parameter name -->
        <exclude name="Universal.NamingConventions.NoReservedKeywordParameterNames"/>
    </rule>

    <!-- Allow file names that don't match class names -->
    <rule ref="WordPress.Files.FileName">
        <properties>
            <property name="strict_class_file_names" value="false"/>
        </properties>
    </rule>

    <!-- Set the correct prefixes -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="aniksmta"/>
                <element value="Aniksmta"/>
                <element value="ANIKSMTA"/>
            </property>
        </properties>
    </rule>
</ruleset>
